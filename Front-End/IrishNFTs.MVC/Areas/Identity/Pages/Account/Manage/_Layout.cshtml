@{
    if (ViewData.TryGetValue("ParentLayout", out var parentLayout) && parentLayout != null)
    {
        Layout = parentLayout.ToString();
    }
    else
    {
        Layout = "/Areas/Identity/Pages/_Layout.cshtml";
    }
}
<h1 class="text-center page-title">Manage your account</h1>
<div class="container-fluid shadow vh-100">

    <div>
        <div class="page-title-container">

        </div>
        <h2>Change your account settings</h2>
        <hr />
        <div class="row">
            <div class="col-md-3">
                <partial name="_ManageNav" />
            </div>
            <div class="col-md-9">
                @RenderBody()
            </div>

        </div>

    </div>
    <div class="row my-5">
        <div class="logo-container my-5 w-50 mx-auto">
            <img class="body-logo" src="/images/irish-nfts-logo.jpg" alt="Irish NFTs logo">
        </div>
    </div>
</div>
@section Scripts {
    @RenderSection("Scripts", required: false)
}
