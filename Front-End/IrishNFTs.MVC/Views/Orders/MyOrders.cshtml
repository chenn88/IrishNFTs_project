<div class="row">
    <div class=text-center>
        <table class="w-100">
            <thead>
                <tr>
                    <th>Order ID</th>
                    <th>Order Date</th>
                    <th>Product</th>
                    <th>Order Date</th>
                    <th>Amount</th>
                    <th>Status</th>
                </tr>
            </thead>
            <tbody>

                @foreach (var item in Model.OrderProductList)
                {
                    <tr>
                        <td>@item.Order.OrderId</td>
                        <td>@item.Order.OrderDate.ToString("dd-MM-yyyy")</td>
                        <td>
                            <h6>@item.Product.Title</h6>
                            <img class="img-thumbnail" src=" @item.Product.ImgUrl">
                        </td>
                        <td>â‚¬@item.Order.OrderTotal.ToString("N2")</td>
                        @if (@item.Order.OrderCancellation)
                        {
                            <td>Cancelled</td>
                        }
                        else
                        {

                            <td>Complete</td>

                        }
                        <td>
                            @if (item.Order.OrderCancellation)
                            {
                                <a class="btn btn-danger" asp-action="CancelOrder"
                                    asp-route-id="@item.Order.OrderId">Cancelled</a>
                            }
                            else
                            {
                                <a class="btn btn-success" asp-action="CancelOrder" asp-route-id="@item.Order.OrderId">Cancel
                                    Order</a>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

