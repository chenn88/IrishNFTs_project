@{
    ViewData["Title"] = "My Orders";
}


<h1 class="text-center">My Orders</h1>
<div class="row">
    <div class="col-6 mx-auto">
        <table>
            <thead>
                <tr>
                    <th>Order ID</th>
                    <th>Date</th>
                    <th>Amount</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var order in Model)
                {
                    <tr>
                        <td>@order.OrderId</td>
                        <td>@order.OrderDate.ToString("dd-MM-yyyy")</td>
                        <td>â‚¬@order.OrderTotal.ToString("N2")</td>
                        @if (order.OrderCancellation)
                        {
                            <td>Cancelled</td>
                        }
                        else
                        {

                            <td>Complete</td>

                        }
                        <td>
                            @* <form method="post" asp-action="CancelOrder" asp-route-id="@order.OrderId">
                        <button type="submit" class="btn btn-primary">Cancel Order</button>
                        </form> *@
                            <a class="btn btn-primary" asp-action="CancelOrder" asp-route-id="@order.OrderId">Cancel
                                Order</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>